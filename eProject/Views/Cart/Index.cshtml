
@{
    ViewData["Title"] = "Index";
}
    <div class="content-area">

        <!-- BREADCRUMBS -->
        <section class="page-section breadcrumbs">
            <div class="container">
                <div class="page-header">
                    <h1>Shopping Cart</h1>
                </div>
                <ul class="breadcrumb">
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Shop</a></li>
                    <li class="active">Shopping Cart</li>
                </ul>   
            </div>
        </section>
        <!-- PAGE -->

        <section class="page-section color">
            <div class="container">
                <h3 class="block-title alt"><i class="fa fa-angle-down"></i>Cart information</h3>
                <div class="row orders">
                    <div class="col-md-8">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Product Name</th>
                                    <th>Price</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.cart != null)
                                {


                                    @foreach (var item in ViewBag.cart)
                                    {
                                        <tr>
                                            <td class="image"><img src="~/images/products/@item.Photo" width="60" height="60" /></td>
                                            <td class="description">
                                                <h4><a href="#">@item.Name</a></h4>
                                            </td>
                                            <td class="total">@item.Price<a asp-controller="cart" asp-action="remove" asp-route-id="@item.ItemId"><i class="fa fa-close"></i></a></td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="col-md-4">
                        <h3 class="block-title"><span>Shopping cart</span></h3>
                        <div class="shopping-cart">
                            <table>
                                <tr>
                                    <td>Sub-total:</td>
                                    <td>@ViewBag.Total</td>
                                </tr>
                                <tr>
                                    <td>Tax:</td>
                                    <td>$..</td>
                                </tr>
                                <tfoot>
                                    <tr>
                                        <td>Total:</td>
                                        <td>$@ViewBag.Total</td>
                                    </tr>
                                </tfoot>
                            </table>
                            @*<div class="form-group">
                        <textarea class="form-control" placeholder="Send a Message"></textarea>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" placeholder="Enter your coupon code" />
                    </div>*@
                            <a class="btn btn-theme btn-theme-dark btn-block" asp-controller="home">Continue Shopping</a>
                        </div>
                    </div>
                </div>
                <div class="overflowed">
                    <a class="btn btn-theme btn-theme-dark" asp-controller="Home">Home Page</a>
                    @if (ViewBag.cart != null && ViewBag.countItems > 0)
                    {
                        <a class="btn btn-theme pull-right" asp-controller="Checkout" asp-action="index">CHECKOUT</a>
                    }
                </div>
            </div>
        </section>
    </div>
     

