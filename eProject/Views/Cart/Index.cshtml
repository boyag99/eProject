
@{
    ViewData["Title"] = "Index";
}




<h3 class="block-title alt"><i class="fa fa-angle-down"></i>Orders</h3>
<div class="row orders">
    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Product Name</th>
                    <th>Quantity</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @if (ViewBag.cart != null)
                {


                @foreach (var item in ViewBag.cart)
                {
                <tr>
                    <td class="image"><a class="media-link" href="#"><i class="fa fa-plus"><img scr="~/products/@item.Photo" width="60" /></a></td>
                    <td class="description">
                        <h4><a href="#">@item.Name</a></h4>
                    </td>
                    <td>
                        <div class="input-append">
                            <input class="span1" style="max-width:34px" placeholder="1" id="appendedInputButtons" size="16" type="text" value="@item.Quantity" />
                            @*<button class="btn" type="button"><i class="icon-minus"></i></button>
                <button class="btn" type="button"><i class="icon-plus"></i></button>*@
                        </div>
                    </td>
                    <td class="total">$@(item.Price * item.Quantity)<a asp-controller="cart" asp-action="remove" asp-route-id="@item.ItemId"><i class="fa fa-close"></i></a></td>
                </tr>
                }
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-4">
        <h3 class="block-title"><span>Shopping cart</span></h3>
        <div class="shopping-cart">
            <table>
                <tr>
                    <td>Sub-total:</td>
                    <td>$....</td>
                </tr>
                <tr>
                    <td>Shipping:</td>
                    <td>$25</td>
                </tr>
                <tfoot>
                    <tr>
                        <td>Total:</td>
                        <td>$......0</td>
                    </tr>
                </tfoot>
            </table>
            <div class="form-group">
                <textarea class="form-control" placeholder="Send a Message"></textarea>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Enter your coupon code" />
            </div>
            <button class="btn btn-theme btn-theme-dark btn-block">Apply Coupon</button>
        </div>
    </div>
</div>
<a asp-controller="home" class="btn btn-large"><i class="icon-arrow-left"></i>Continue SHopping</a>
@if (ViewBag.cart != null && ViewBag.countItems>0)
{
    <a asp-controller="cart" asp-action="checkout" class="btn btn-large pull-right">Checkout<i class="icon-arrow-right"></i></a>
}