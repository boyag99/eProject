
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_FrontendLayout.cshtml";
}


@model eProject.Models.Photo


<h1>Add new Photo to @ViewBag.Product.Name</h1>

<!-- Main content -->
<!-- Main content -->
<!-- CONTENT AREA -->
<div class="content-area">
    <section class="page-section">
        <div class="wrap container">
            <div class="row">
                <!--start main contain of page-->
                <div class="col-lg-9 col-md-9 col-sm-8">
                    <div class="information-title">Add photo</div>
                    <div class="details-wrap">
                        <div class="block-title alt"><i class="fa fa-plus"></i>Photo details</div>
                        <div class="details-box">
                            <!-- form start -->
                            <form class="form-delivery" method="post" asp-controller="PhotoProductArtist" asp-action="add" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-md-12 col-sm-12">
                                        <div class="form-group">
                                            <label for="exampleInputFile">Photo</label>
                                            <input type="file" class="custom-file-input" id="exampleInputFile" name="fileUpload" accept="image/*">
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-sm-12">
                                        <input type="checkbox" class="form-check-input" id="checkbox" asp-for="Status">
                                        <label class="form-check-label" for="checkbox">Status</label>
                                    </div>
                                    <div class="col-md-12 col-sm-12">
                                        <button class="btn btn-theme btn-theme-dark" type="submit"> Add Photo </button>
                                    </div>
                                    <input type="hidden" asp-for="ProductId" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!--end main contain of page-->
                <!--start sidebar-->
                <div class="col-lg-3 col-md-3 col-sm-4">
                    <div class="widget account-details">
                        <h2 class="widget-title">Account</h2>
                        <ul>
                            @await Html.PartialAsync("../Account/Partial/_Sidebar")
                        </ul>
                    </div>
                </div>
                <!--end sidebar-->
            </div>

        </div>
    </section>
</div>
<!-- /CONTENT AREA -->
<!-- /.content -->
