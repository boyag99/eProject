@model IEnumerable<eProject.Models.Review>

@{
    ViewData["Title"] = "List All Reviews";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Users</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">List All Reviews</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">

            <div class="card">
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Comment</th>
                                <th>User</th>
                                <th>Product</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var review in Model)
                            {
                            <tr>
                                <td>
                                    @review.ReviewId
                                </td>
                                <td>
                                    @review.Message
                                </td>
                                <td>
                                    <a asp-controller="User" asp-action="Edit" asp-route-id="@review.User.Id">@review.User.FirstName @review.User.LastName</a>
                                </td>
                                <td>
                                    <a asp-controller="Products" asp-action="Edit" asp-route-id="@review.Product.ProductId">@review.Product.Name</a>
                                </td>
                                <td>
                                    @review.Status
                                </td>
                                <td>
                                    <a asp-controller="Review" asp-action="Edit" asp-route-id="@review.ReviewId"><i class="fa fa-trash" aria-hidden="true">Hide</i></a>
                                </td>
                            </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>#</th>
                                <th>Comment</th>
                                <th>User</th>
                                <th>Product</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->

@section Scripts
{
    <script>
$(function () {
            $("#example1").DataTable({
                "responsive": true,
                "autoWidth": false,
            });
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });</script>
}