@model IEnumerable<eProject.Models.ViewModels.UserInfo>

@{
    ViewData["Title"] = "List All Users";
}


<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Users</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">List All Users</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">

            <div class="card">
                <div class="card-header">
                    <a class="btn btn-primary float-right" asp-area="Admin" asp-controller="User" asp-action="Create">Add new user</a>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Name</th>
                                <th>Role</th>
                                <th>Mobile</th>
                                <th>Email</th>
                                <th>Gender</th>
                                <th>Address</th>
                                <th>DOB</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        @{
                                            if (user.ProfileImage is null)
                                            {
                                                <img src="~/backend/dist/img/user2-160x160.jpg" class="img-circle elevation-2" width="50" height="50" alt="User Image" />
                                            }
                                            else
                                            {
                                                <img src="@user.Picture" class="img-circle elevation-2" width="50" height="50" alt="User Image" />
                                            }
                                        }
                                    </td>
                                    <td>@user.FullName</td>
                                    <td>@user.Role[0]</td>
                                    <td>@user.PhoneNumber</td>
                                    <td>@user.Email</td>
                                    <td>@user.Gender</td>
                                    <td>@user.Address</td>
                                    <td>@user.DateOfBirthDay</td>
                                    @{
                                        if (user.LockoutEnd < DateTime.Now || user.LockoutEnd is null)
                                        {
                                            <td class="center text-primary"> Normal </td>
                                        }
                                        else
                                        {
                                            <td class="center text-danger"> Lock </td>
                                        }
                                    }
                                    <td>
                                        <a asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-xs">
                                            <i class="fas fa-user-edit"></i>
                                        </a>
                                        @if (user.LockoutEnd < DateTime.Now || user.LockoutEnd is null)
                                        {
                                            <a class="btn btn-xs" asp-action="Lock" asp-route-id="@user.UserId">
                                                <i class="fas fa-lock"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a class="btn btn-xs" asp-action="Unlock" asp-route-id="@user.UserId">
                                                <i class="fas fa-lock-open"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th></th>
                                <th>Name</th>
                                <th>Role</th>
                                <th>Mobile</th>
                                <th>Email</th>
                                <th>Gender</th>
                                <th>Address</th>
                                <th>DOB</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->

@section Scripts
{
    <script>
$(function () {
            $("#example1").DataTable({
                "responsive": true,
                "autoWidth": false,
            });
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });</script>
}