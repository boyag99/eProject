@model IEnumerable<eProject.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_BackendLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Categories</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">List Categories</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="row">
        <div class="col-12">

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Categories</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Parent</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Category category in Model)
                            {
                                <tr>
                                    <td>@category.CategoryId</td>
                                    <td>
                                        <b>@category.CategoryName</b>
                                    </td>
                                    <td>@(category.Status ? "Show" : "Hide")</td>
                                    <td>@(category.Parent == null ? "" : @category.Parent.CategoryName)</td>
                                    <td>
                                        <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@category.CategoryId">Edit</a> |
                                        @if (!(category.InverseParents is null) && category.InverseParents.Count == 0)
                                        {
                                            <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.CategoryId" onclick="return confirm('Are you sure?')">Delete</a>
                                            <span>|</span>
                                        }
                                        <a asp-area="Admin" asp-controller="Category" asp-action="AddSubCategory" asp-route-id="@category.CategoryId">Add Sub Category</a>
                                    </td>
                                </tr>

                                if (!(category.InverseParents is null) && category.InverseParents.Count != 0)
                                {
                                    foreach (var subCategory in category.InverseParents)
                                    {
                                        <tr>
                                            <td>@subCategory.CategoryId</td>
                                            <td>
                                                &nbsp;&nbsp;&nbsp;&nbsp;@subCategory.CategoryName
                                            </td>
                                            <td>@(subCategory.Status ? "Show" : "Hide")</td>
                                            <td>@subCategory.Parent.CategoryName</td>
                                            <td>
                                                <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@subCategory.CategoryId">Edit</a> |
                                                <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@subCategory.CategoryId" onclick="return confirm('Are you sure?')">Delete</a>
                                            </td>
                                        </tr>
                                    }
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Parent</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

