@model IEnumerable<eProject.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_BackendLayout.cshtml";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Category List</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">List All Categories</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-12">

            <div class="card">
                <div class="card-header">
                    <a class="btn btn-primary float-right" asp-area="Admin" asp-controller="Category" asp-action="Create">Add new Category</a>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                
                                <th>Id</th>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Parent</th>
                                <th>Action</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                            <tr>
                                <td>@category.Id</td>
                                <td>
                                   <b>@category.Name</b>
                                </td>

                                <td>@(category.Status ? "Show" : "Hide")</td>
                             
                                <td>@(category.Parent == null ? "" : category.Parent.Name )</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = category.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = category.Id } , new { onclick = "return confirm('Are you sure?')"}) |
                                    @Html.ActionLink("Add Subcategory", "AddSubCategory", new { id = category.Id })

                                </td>
                            </tr>

                                if(category.InverseParent !=null && category.InverseParent.Count !=0)
                                {
                                    foreach(var subCategory in category.InverseParent)
                                    {
                                                <tr>
                                                    <td>@subCategory.Id</td>
                                                    <td>&nbsp;&nbsp;&nbsp;&nbsp;@subCategory.Name</td>

                                                    <td>@(subCategory.Status ? "Show" : "Hide")</td>

                                                    <td>@subCategory.Parent.Name</td>
                                                    <td>
                                                        @Html.ActionLink("Edit", "Edit", new { id = subCategory.Id }) |
                                                        @Html.ActionLink("Delete", "Delete", new { id = subCategory.Id }, new { onclick = "return confirm('Are you sure?')" }) |
                                                       

                                                    </td>
                                                </tr>
                                    }
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Status</th>
                                <th>Parent</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->

@section Scripts
{
    <script>
$(function () {
            $("#example1").DataTable({
                "responsive": true,
                "autoWidth": false,
            });
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
            });
        });</script>
}

