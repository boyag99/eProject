@model eProject.Areas.Admin.Models.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_BackendLayout.cshtml";
}


<h1>Add new Product</h1>
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Create New Product</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Create New Product</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Product information</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form method="post" asp-area="admin" asp-controller="Products" asp-action="create">
                <div class="card-body">

                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" asp-for="Product.Name" required>
                    </div>

                    <div class="form-group">
                        <label>Description</label>
                        <textarea class="form-control" rows="3" asp-for="Product.Description"></textarea>
                    </div>

                    <div class="form-group">
                        <label>Price</label>
                        <input type="number" class="form-control" asp-for="Product.Price" min="0" required>
                    </div>

                    <div class="form-group">
                        <label>Sale Price</label>
                        <input type="number" class="form-control" asp-for="Product.SalePrice" min="0" required>
                    </div>

                    <div class="form-group">
                        <label>Quantity</label>
                        <input type="number" class="form-control" asp-for="Product.Quantity" min="0" required>
                    </div>

                    <div class="form-group">
                        <label>Category</label>
                        <select class="form-control" asp-for="Product.CategoryId" asp-items="Model.Categories"></select>
                    </div>

                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="checkbox" asp-for="Product.Status">
                        <label class="form-check-label" for="checkbox">Status</label>
                    </div>

                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="checkbox1" asp-for="Product.Featured">
                        <label class="form-check-label" for="checkbox1">Featured</label>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="checkbox1" asp-for="Product.Auction">
                        <label class="form-check-label" for="checkbox1">Auction</label>
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</section>
